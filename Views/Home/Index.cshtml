@{
    ViewData["Title"] = "Dashboard";
}

<div class="welcome-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold">Bienvenido, @ViewBag.Nombre!</h1>
                <p class="lead mb-0">Sistema de Gestión Bibliotecaria - @ViewBag.Tipo</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="bg-light text-dark rounded-pill px-3 py-2 d-inline-block">
                    <i class="fas fa-calendar-day"></i> @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Estadísticas principales -->
    <div class="row g-4">
        <div class="col-md-3">
            <a href="/Libros" class="text-decoration-none">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-book fa-3x mb-3"></i>
                        <h4>@ViewBag.TotalLibros</h4>
                        <h6>Total de Libros</h6>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-3">
            <a href="/Libros" class="text-decoration-none">
                <div class="card bg-success text-white h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <h4>@ViewBag.LibrosDisponibles</h4>
                        <h6>Disponibles</h6>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-3">
            <a href="/Prestamos" class="text-decoration-none">
                <div class="card bg-warning text-white h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-hand-holding fa-3x mb-3"></i>
                        <h4>@ViewBag.PrestamosActivos</h4>
                        <h6>Préstamos Activos</h6>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-3">
            <a href="/Reservas" class="text-decoration-none">
                <div class="card bg-info text-white h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-calendar-check fa-3x mb-3"></i>
                        <h4>@ViewBag.LibrosReservados</h4>
                        <h6>Libros Reservados</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-rocket"></i> Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="/Libros" class="btn btn-outline-primary w-100 h-100 py-3">
                                <i class="fas fa-search fa-2x mb-2"></i><br>
                                Buscar Libros
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/Prestamos/Create" class="btn btn-outline-success w-100 h-100 py-3">
                                <i class="fas fa-hand-holding fa-2x mb-2"></i><br>
                                Nuevo Préstamo
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/Reservas/Create" class="btn btn-outline-warning w-100 h-100 py-3">
                                <i class="fas fa-calendar-plus fa-2x mb-2"></i><br>
                                Hacer Reserva
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/Prestamos" class="btn btn-outline-info w-100 h-100 py-3">
                                <i class="fas fa-list fa-2x mb-2"></i><br>
                                Mis Préstamos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>