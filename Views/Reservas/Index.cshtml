@model List<BibliotecaWeb.Models.Reserva>
@{
    ViewData["Title"] = "Mis Reservas";
}

<div class="container mt-4">
    <h2>üìã Mis Reservas</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No tienes reservas activas.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Libro</th>
                    <th>Fecha Reserva</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.Libro.Titulo - @reserva.Libro.Autor</td>
                        <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge badge-warning">@reserva.Estado</span>
                        </td>
                        <td>
                            <a href="/Reservas/Cancelar/@reserva.ReservaID" 
                               class="btn btn-danger btn-sm" 
                               onclick="return confirm('¬øEst√°s seguro de cancelar esta reserva?')">
                                ‚ùå Cancelar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a href="/Reservas/Create" class="btn btn-primary">üìã Nueva Reserva</a>
        <a href="/Libros" class="btn btn-info">üìö Ver Libros</a>
        <a href="/Home" class="btn btn-secondary">‚Üê Volver al Dashboard</a>
    </div>
</div>